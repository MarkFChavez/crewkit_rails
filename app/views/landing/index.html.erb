<div class="h-screen overflow-hidden flex items-center justify-center bg-gradient-to-br from-emerald-50 via-teal-50 to-blue-50 px-4">
  <div class="max-w-3xl w-full">
    <!-- Hero Section -->
    <div class="text-center mb-8 relative">
      <!-- Floating Background Shapes -->
      <div class="absolute inset-0 overflow-hidden pointer-events-none">
        <div class="absolute top-0 left-1/4 w-32 h-32 bg-emerald-200/20 rounded-full blur-3xl animate-pulse"></div>
        <div class="absolute bottom-0 right-1/4 w-40 h-40 bg-teal-200/20 rounded-full blur-3xl animate-pulse" style="animation-delay: 1s;"></div>
      </div>

      <!-- Early Access Badge -->
      <div class="inline-flex items-center gap-2 px-4 py-2 bg-emerald-100 text-emerald-700 rounded-full text-sm font-semibold mb-6 shadow-sm">
        <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        Early Access
      </div>

      <!-- Main Headline -->
      <h1 class="text-5xl md:text-7xl font-extrabold bg-gradient-to-r from-emerald-600 via-teal-600 to-blue-600 bg-clip-text text-transparent mb-6 leading-tight tracking-tight">
        CrewKit
      </h1>

      <!-- Subheadline -->
      <p class="text-xl md:text-2xl font-medium text-gray-600 mb-4">
        Team Management Made Simple
      </p>

      <!-- Supporting Text -->
      <p class="text-lg md:text-xl text-gray-700 mb-2 max-w-2xl mx-auto">
        Track attendance, log hours, and manage your teamsâ€”all in one platform.
      </p>
    </div>

    <!-- Inline Waitlist Form -->
    <div class="bg-white/80 backdrop-blur-md rounded-2xl shadow-2xl shadow-emerald-200/50 p-6 md:p-8 border border-emerald-100 max-w-xl mx-auto">
      <div class="text-center mb-6">
        <h2 class="text-2xl font-bold text-gray-900 mb-2">
          Join the Waitlist
        </h2>
        <p class="text-gray-600 text-sm">
          Be the first to know when we launch.
        </p>
      </div>

      <%= form_with(model: @waitlist_signup, url: waitlist_path, id: "waitlist-form", class: "space-y-4", data: { turbo: false }) do |form| %>
        <div id="form-messages" class="hidden">
          <!-- Success/Error messages will appear here -->
        </div>

        <div>
          <%= form.label :email, "Email Address", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
              <svg class="h-5 w-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
              </svg>
            </div>
            <%= form.email_field :email,
                placeholder: "you@example.com",
                required: true,
                class: "w-full pl-10 pr-4 py-2.5 border border-gray-300 rounded-lg focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 transition-all",
                autocomplete: "email" %>
          </div>
        </div>

        <div>
          <%= form.submit "Join Waitlist",
              id: "submit-btn",
              class: "w-full bg-gradient-to-r from-emerald-600 to-emerald-500 text-white px-6 py-3 rounded-lg font-semibold hover:from-emerald-700 hover:to-emerald-600 transition-all duration-200 shadow-lg shadow-emerald-200 hover:shadow-xl hover:shadow-emerald-300 hover:scale-105 transform cursor-pointer",
              data: { turbo_submits_with: "Joining..." } %>
        </div>
      <% end %>

      <!-- Features List -->
      <div class="mt-6 pt-6 border-t border-gray-200">
        <div class="grid grid-cols-3 gap-3 text-xs text-gray-600">
          <div class="flex items-center gap-1.5">
            <svg class="w-4 h-4 text-emerald-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span>Early access</span>
          </div>
          <div class="flex items-center gap-1.5">
            <svg class="w-4 h-4 text-emerald-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span>Priority support</span>
          </div>
          <div class="flex items-center gap-1.5">
            <svg class="w-4 h-4 text-emerald-500 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
            </svg>
            <span>No spam</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Sign In Link -->
    <div class="text-center mt-6">
      <p class="text-sm text-gray-600">
        Already have an account?
        <%= link_to "Sign in", login_path, class: "text-emerald-600 hover:text-emerald-700 font-semibold transition-colors" %>
      </p>
    </div>
  </div>
</div>

<script>
  // Handle form submission with fetch API
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('waitlist-form');
    const messagesDiv = document.getElementById('form-messages');
    const emailInput = form.querySelector('input[type="email"]');
    const submitBtn = document.getElementById('submit-btn');

    form.addEventListener('submit', async function(event) {
      event.preventDefault();

      // Disable submit button
      submitBtn.disabled = true;
      submitBtn.textContent = 'Joining...';

      // Get form data
      const formData = new FormData(form);

      try {
        const response = await fetch(form.action, {
          method: 'POST',
          headers: {
            'X-CSRF-Token': document.querySelector('meta[name="csrf-token"]').content,
            'Accept': 'application/json'
          },
          body: formData
        });

        const data = await response.json();

        if (response.ok) {
          // Show success message
          messagesDiv.className = 'bg-emerald-50 border-l-4 border-emerald-500 p-4 rounded-r-lg mb-4';
          messagesDiv.innerHTML = `
            <div class="flex items-center">
              <svg class="w-5 h-5 text-emerald-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              <p class="text-emerald-700 font-medium">${data.message}</p>
            </div>
          `;
          messagesDiv.classList.remove('hidden');

          // Clear the form
          emailInput.value = '';

          // Hide the form fields after success
          setTimeout(() => {
            form.querySelector('.space-y-4').style.display = 'none';
          }, 2000);
        } else {
          // Show error message
          messagesDiv.className = 'bg-red-50 border-l-4 border-red-500 p-4 rounded-r-lg mb-4';

          let errorMessages = '';
          if (data.errors && data.errors.length > 0) {
            errorMessages = data.errors.map(err => `<li>${err}</li>`).join('');
          } else {
            errorMessages = '<li>Something went wrong. Please try again.</li>';
          }

          messagesDiv.innerHTML = `
            <div class="flex">
              <svg class="w-5 h-5 text-red-500 mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
              </svg>
              <div class="text-red-700">
                <ul class="list-none">${errorMessages}</ul>
              </div>
            </div>
          `;
          messagesDiv.classList.remove('hidden');

          // Re-enable submit button
          submitBtn.disabled = false;
          submitBtn.textContent = 'Join Waitlist';
        }
      } catch (error) {
        // Show error message
        messagesDiv.className = 'bg-red-50 border-l-4 border-red-500 p-4 rounded-r-lg mb-4';
        messagesDiv.innerHTML = `
          <div class="flex items-center">
            <svg class="w-5 h-5 text-red-500 mr-3" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
            </svg>
            <p class="text-red-700 font-medium">Network error. Please try again.</p>
          </div>
        `;
        messagesDiv.classList.remove('hidden');

        // Re-enable submit button
        submitBtn.disabled = false;
        submitBtn.textContent = 'Join Waitlist';
      }
    });
  });
</script>
