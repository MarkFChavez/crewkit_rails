<div class="space-y-6">
  <!-- Header -->
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold text-gray-900">Hours Logging</h1>
  </div>

  <!-- Team Selection (Required for Performance) -->
  <div class="bg-gradient-to-br from-white to-emerald-50 rounded-xl shadow-lg p-6 border-l-4 border-emerald-500">
    <%= form_with(url: hours_path, method: :get, class: "space-y-4") do |form| %>
      <div class="mb-4">
        <h2 class="text-lg font-semibold text-gray-900 mb-2 flex items-center gap-2">
          <svg class="w-5 h-5 text-emerald-600" fill="currentColor" viewBox="0 0 20 20">
            <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"/>
          </svg>
          Select Team
        </h2>
        <p class="text-sm text-gray-600 mb-3">Choose a team to view and log hours</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
          <%= form.label :team_id, "Team", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.select :team_id, options_for_select(@all_teams.map { |t| [t.name, t.id] }, @team_filter), { prompt: "Select a team..." }, class: "w-full px-4 py-2 border border-emerald-300 rounded-md focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 bg-white" %>
        </div>

        <div>
          <%= form.label :date_start, "Start Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.date_field :date_start, value: @date_start, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500" %>
        </div>

        <div>
          <%= form.label :date_end, "End Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.date_field :date_end, value: @date_end, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500" %>
        </div>

        <div class="flex items-end">
          <%= form.submit "View Hours", class: "cursor-pointer w-full bg-gradient-to-r from-emerald-600 to-emerald-500 text-white px-4 py-2 rounded-md hover:from-emerald-700 hover:to-emerald-600 font-medium shadow-md hover:shadow-lg transition-all" %>
        </div>
      </div>
    <% end %>
  </div>

  <% if @team_filter.present? %>
    <!-- Hours Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="text-sm text-gray-600">Total Records</div>
        <div class="text-3xl font-bold text-gray-900"><%= @hours_logs.count %></div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="text-sm text-gray-600">Total Hours Logged</div>
        <div class="text-3xl font-bold text-blue-600"><%= number_with_precision(@hours_logs.sum(:hours), precision: 2) %></div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="text-sm text-gray-600">Average Hours per Entry</div>
        <div class="text-3xl font-bold text-emerald-600">
          <% avg = @hours_logs.any? ? (@hours_logs.sum(:hours) / @hours_logs.count).round(2) : 0 %>
          <%= number_with_precision(avg, precision: 2) %>
        </div>
      </div>
    </div>

    <!-- Hours Logging Form and Table -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Hours Records</h2>
      </div>
      <div class="p-6">
        <% if @teams.any? && @teams.any? { |team| team.team_members.any? } %>
        <!-- Bulk Entry Form -->
        <%= form_with(url: bulk_update_hours_path, method: :post, class: "mb-8 pb-8 border-b border-gray-200") do |form| %>
          <div class="mb-6">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Add Hours for Today</h3>
            <div class="space-y-4">
              <% @teams.each do |team| %>
                <% if team.team_members.any? %>
                  <div class="mb-6">
                    <h4 class="font-medium text-gray-900 mb-3"><%= team.name %></h4>
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                      <% team.team_members.order(:name).each do |member| %>
                        <div class="flex items-end space-x-2">
                          <div class="flex-1">
                            <label class="block text-sm font-medium text-gray-700 mb-1"><%= member.name %></label>
                            <input type="number" name="hours[<%= member.id %>][hours]" placeholder="Hours" step="0.5" min="0" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 text-sm">
                          </div>
                          <div class="flex-1">
                            <input type="text" name="hours[<%= member.id %>][deliverable_notes]" placeholder="Deliverable/Notes" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 text-sm">
                          </div>
                        </div>
                        <%= form.hidden_field "hours[#{member.id}][log_date]", value: Date.today.to_s %>
                      <% end %>
                    </div>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>

          <div class="flex space-x-3">
            <%= form.submit "Save Hours", class: "cursor-pointer bg-emerald-600 text-white px-4 py-2 rounded-md hover:bg-emerald-700 font-medium" %>
          </div>
        <% end %>

        <!-- Hours History Table -->
        <h3 class="text-lg font-semibold text-gray-900 mb-4">Hours History</h3>
        <% if @hours_logs.any? %>
          <div class="overflow-x-auto">
            <table class="min-w-full divide-y divide-gray-200">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Team</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Member</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Role</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Hours</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Deliverable/Notes</th>
                  <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody class="bg-white divide-y divide-gray-200">
                <% @hours_logs.each do |log| %>
                  <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                      <%= log.log_date.strftime('%b %d, %Y') %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                      <%= link_to log.team_member.team.name, team_path(log.team_member.team), class: "cursor-pointer text-emerald-600 hover:text-emerald-700" %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= log.team_member.name %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= log.team_member.role %></td>
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class="px-3 py-1 inline-flex text-sm leading-5 font-semibold rounded-full bg-blue-100 text-blue-800">
                        <%= number_with_precision(log.hours, precision: 2) %> hrs
                      </span>
                    </td>
                    <td class="px-6 py-4 text-sm text-gray-600">
                      <% if log.deliverable_notes.present? %>
                        <%= truncate(log.deliverable_notes, length: 50) %>
                      <% else %>
                        <span class="text-gray-400">-</span>
                      <% end %>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                      <%= link_to "Edit", edit_hours_log_path(log), class: "cursor-pointer text-emerald-600 hover:text-emerald-700 mr-2" %>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="text-center py-12">
            <p class="text-gray-500 text-lg mb-4">No hours logged for the selected period</p>
          </div>
        <% end %>
        <% else %>
          <div class="text-center py-12">
            <p class="text-gray-500 text-lg mb-4">No active teams with members to log hours for</p>
            <%= link_to "Create a team", new_team_path, class: "cursor-pointer text-emerald-600 hover:text-emerald-700 font-medium" %>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <!-- No Team Selected Message -->
    <div class="bg-white rounded-xl shadow-lg p-12">
      <div class="text-center">
        <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
        </svg>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">Select a Team to View Hours</h3>
        <p class="text-gray-600 mb-6">Choose a team from the dropdown above to view hours logs and add new entries.</p>
        <p class="text-sm text-gray-500">
          You can track work hours and deliverables for each team member.
        </p>
      </div>
    </div>
  <% end %>
</div>
