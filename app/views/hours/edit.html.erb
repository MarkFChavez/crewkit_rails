<div class="max-w-2xl mx-auto space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <h1 class="text-3xl font-bold text-gray-900">Edit Hours Log</h1>
    <%= link_to "Back to Hours", hours_path, class: "text-emerald-600 hover:text-emerald-700 font-medium" %>
  </div>

  <!-- Log Details -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="grid grid-cols-2 gap-4 mb-6 pb-6 border-b border-gray-200">
      <div>
        <div class="text-sm text-gray-600">Team Member</div>
        <div class="text-lg font-semibold text-gray-900"><%= @team_member.name %></div>
      </div>
      <div>
        <div class="text-sm text-gray-600">Date</div>
        <div class="text-lg font-semibold text-gray-900"><%= @log.log_date.strftime('%B %d, %Y') %></div>
      </div>
      <div>
        <div class="text-sm text-gray-600">Team</div>
        <div class="text-lg font-semibold text-gray-900"><%= @team_member.team.name %></div>
      </div>
      <div>
        <div class="text-sm text-gray-600">Role</div>
        <div class="text-lg font-semibold text-gray-900"><%= @team_member.role %></div>
      </div>
    </div>

    <%= form_with(model: @log, url: update_hours_path(@log), method: :patch, class: "space-y-6") do |form| %>
      <div>
        <%= form.label :hours, "Hours Worked", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.number_field :hours, step: 0.5, min: 0, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500", placeholder: "Enter hours (e.g., 8 or 8.5)" %>
        <p class="mt-1 text-sm text-gray-500">Enter the number of hours worked (you can use decimal values like 8.5)</p>
      </div>

      <div>
        <%= form.label :deliverable_notes, "Deliverable/Notes", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :deliverable_notes, rows: 4, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500", placeholder: "Describe what was accomplished during these hours..." %>
        <p class="mt-1 text-sm text-gray-500">Add details about deliverables or work completed</p>
      </div>

      <div class="flex justify-end space-x-4">
        <%= link_to "Cancel", hours_path, class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 font-medium" %>
        <%= form.submit "Update Hours", class: "bg-emerald-600 text-white px-4 py-2 rounded-md hover:bg-emerald-700 font-medium" %>
      </div>
    <% end %>
  </div>
</div>
