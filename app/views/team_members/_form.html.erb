<%= form_with(model: [@team, @team_member], class: "space-y-6") do |form| %>
  <% if @team_member.errors.any? %>
    <div id="error_explanation" class="rounded-md bg-red-50 p-4 border border-red-200">
      <h2 class="text-sm font-semibold text-red-800"><%= pluralize(@team_member.errors.count, "error") %> prohibited this team member from being saved:</h2>
      <ul class="mt-2 list-disc list-inside text-sm text-red-700">
        <% @team_member.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :name, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500", placeholder: "Member's full name" %>
  </div>

  <div>
    <%= form.label :role, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.text_field :role, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500", placeholder: "Job role (e.g., Developer, Designer)" %>
  </div>

  <div>
    <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.email_field :email, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500", placeholder: "Email address" %>
  </div>

  <div>
    <%= form.label :phone, class: "block text-sm font-medium text-gray-700 mb-1" %>
    <%= form.telephone_field :phone, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500", placeholder: "Phone number (optional)" %>
  </div>

  <div class="flex space-x-4 pt-4">
    <%= form.submit class: "cursor-pointer bg-emerald-600 text-white px-4 py-2 rounded-md hover:bg-emerald-700 font-medium" %>
    <%= link_to "Cancel", @team, class: "cursor-pointer bg-gray-300 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-400 font-medium" %>
  </div>
<% end %>
