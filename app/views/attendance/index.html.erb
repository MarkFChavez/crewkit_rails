<div class="space-y-6">
  <!-- Header -->
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold text-gray-900">Attendance History</h1>
    <%= link_to "Quick Entry", attendance_quick_entry_path, class: "cursor-pointer bg-emerald-600 text-white px-4 py-2 rounded-md hover:bg-emerald-700 font-medium" %>
  </div>

  <!-- Team Selection (Required for Performance) -->
  <div class="bg-gradient-to-br from-white to-emerald-50 rounded-xl shadow-lg p-6 border-l-4 border-emerald-500">
    <%= form_with(url: attendance_path, method: :get, class: "space-y-4") do |form| %>
      <div class="mb-4">
        <h2 class="text-lg font-semibold text-gray-900 mb-2 flex items-center gap-2">
          <svg class="w-5 h-5 text-emerald-600" fill="currentColor" viewBox="0 0 20 20">
            <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"/>
          </svg>
          Select Team
        </h2>
        <p class="text-sm text-gray-600 mb-3">Choose a team to view attendance records</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
        <div>
          <%= form.label :team_id, "Team", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.select :team_id, options_for_select(@all_teams.map { |t| [t.name, t.id] }, @team_filter), { prompt: "Select a team..." }, class: "w-full px-4 py-2 border border-emerald-300 rounded-md focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 bg-white" %>
        </div>

        <div>
          <%= form.label :date_start, "Start Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.date_field :date_start, value: @date_start, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500" %>
        </div>

        <div>
          <%= form.label :date_end, "End Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.date_field :date_end, value: @date_end, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500" %>
        </div>

        <div class="flex items-end">
          <%= form.submit "View Attendance", class: "cursor-pointer w-full bg-gradient-to-r from-emerald-600 to-emerald-500 text-white px-4 py-2 rounded-md hover:from-emerald-700 hover:to-emerald-600 font-medium shadow-md hover:shadow-lg transition-all" %>
        </div>
      </div>
    <% end %>
  </div>

  <% if @team_filter.present? %>
    <!-- Attendance Summary Cards -->
    <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
      <div class="bg-white rounded-lg shadow p-6">
        <div class="text-sm text-gray-600">Total Records</div>
        <div class="text-3xl font-bold text-gray-900"><%= @attendance_records.count %></div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="text-sm text-gray-600">Present</div>
        <div class="text-3xl font-bold text-green-600"><%= @attendance_records.where(status: :present).count %></div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="text-sm text-gray-600">Late</div>
        <div class="text-3xl font-bold text-yellow-600"><%= @attendance_records.where(status: :late).count %></div>
      </div>

      <div class="bg-white rounded-lg shadow p-6">
        <div class="text-sm text-gray-600">Absent</div>
        <div class="text-3xl font-bold text-red-600"><%= @attendance_records.where(status: :absent).count %></div>
      </div>
    </div>

    <!-- Attendance Table -->
    <div class="bg-white rounded-lg shadow">
      <div class="px-6 py-4 border-b border-gray-200">
        <h2 class="text-xl font-semibold text-gray-900">Attendance Records</h2>
      </div>
      <div class="p-6">
        <% if @attendance_records.any? %>
        <div class="overflow-x-auto">
          <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
              <tr>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Team</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Member</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Role</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Notes</th>
                <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
              </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
              <% @attendance_records.each do |record| %>
                <tr class="hover:bg-gray-50">
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                    <%= record.record_date.strftime('%b %d, %Y') %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600">
                    <%= link_to record.team_member.team.name, team_path(record.team_member.team), class: "cursor-pointer text-emerald-600 hover:text-emerald-700" %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= record.team_member.name %></td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-600"><%= record.team_member.role %></td>
                  <td class="px-6 py-4 whitespace-nowrap">
                    <% if record.present? %>
                      <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Present</span>
                    <% elsif record.late? %>
                      <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">Late</span>
                    <% else %>
                      <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">Absent</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 text-sm text-gray-600">
                    <% if record.notes.present? %>
                      <%= truncate(record.notes, length: 50) %>
                    <% else %>
                      <span class="text-gray-400">-</span>
                    <% end %>
                  </td>
                  <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                    <%= link_to "Edit", edit_attendance_record_path(record), class: "cursor-pointer text-emerald-600 hover:text-emerald-700 mr-2" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
        <% else %>
          <div class="text-center py-12">
            <p class="text-gray-500 text-lg mb-4">No attendance records found for the selected filters</p>
            <%= link_to "Go to Quick Entry", attendance_quick_entry_path, class: "cursor-pointer text-emerald-600 hover:text-emerald-700 font-medium" %>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <!-- No Team Selected Message -->
    <div class="bg-white rounded-xl shadow-lg p-12">
      <div class="text-center">
        <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
        </svg>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">Select a Team to View Attendance</h3>
        <p class="text-gray-600 mb-6">Choose a team from the dropdown above to view attendance records and statistics.</p>
        <p class="text-sm text-gray-500">
          Need to record attendance? <%= link_to "Go to Quick Entry", attendance_quick_entry_path, class: "text-emerald-600 hover:text-emerald-700 font-medium" %>
        </p>
      </div>
    </div>
  <% end %>
</div>
