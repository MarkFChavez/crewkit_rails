<div class="max-w-2xl mx-auto space-y-6">
  <!-- Header -->
  <div class="flex items-center justify-between">
    <h1 class="text-3xl font-bold text-gray-900">Edit Attendance Record</h1>
    <%= link_to "Back to Attendance", attendance_path, class: "text-emerald-600 hover:text-emerald-700 font-medium" %>
  </div>

  <!-- Record Details -->
  <div class="bg-white rounded-lg shadow p-6">
    <div class="grid grid-cols-2 gap-4 mb-6 pb-6 border-b border-gray-200">
      <div>
        <div class="text-sm text-gray-600">Team Member</div>
        <div class="text-lg font-semibold text-gray-900"><%= @team_member.name %></div>
      </div>
      <div>
        <div class="text-sm text-gray-600">Date</div>
        <div class="text-lg font-semibold text-gray-900"><%= @record.record_date.strftime('%B %d, %Y') %></div>
      </div>
      <div>
        <div class="text-sm text-gray-600">Team</div>
        <div class="text-lg font-semibold text-gray-900"><%= @team_member.team.name %></div>
      </div>
      <div>
        <div class="text-sm text-gray-600">Role</div>
        <div class="text-lg font-semibold text-gray-900"><%= @team_member.role %></div>
      </div>
    </div>

    <%= form_with(model: @record, url: update_attendance_path(@record), method: :patch, class: "space-y-6") do |form| %>
      <div>
        <%= form.label :status, "Status", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <div class="space-y-2">
          <div class="flex items-center">
            <%= form.radio_button :status, "present", class: "h-4 w-4 text-emerald-600 focus:ring-emerald-500 border-gray-300" %>
            <%= form.label :status_present, class: "ml-2 block text-sm text-gray-700" do %>
              <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-green-100 text-green-800">Present</span>
            <% end %>
          </div>
          <div class="flex items-center">
            <%= form.radio_button :status, "late", class: "h-4 w-4 text-emerald-600 focus:ring-emerald-500 border-gray-300" %>
            <%= form.label :status_late, class: "ml-2 block text-sm text-gray-700" do %>
              <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-yellow-100 text-yellow-800">Late</span>
            <% end %>
          </div>
          <div class="flex items-center">
            <%= form.radio_button :status, "absent", class: "h-4 w-4 text-emerald-600 focus:ring-emerald-500 border-gray-300" %>
            <%= form.label :status_absent, class: "ml-2 block text-sm text-gray-700" do %>
              <span class="px-3 py-1 inline-flex text-xs leading-5 font-semibold rounded-full bg-red-100 text-red-800">Absent</span>
            <% end %>
          </div>
        </div>
      </div>

      <div>
        <%= form.label :notes, "Notes", class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_area :notes, rows: 4, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500", placeholder: "Add any notes about this attendance record..." %>
      </div>

      <div class="flex justify-end space-x-4">
        <%= link_to "Cancel", attendance_path, class: "px-4 py-2 border border-gray-300 rounded-md text-gray-700 hover:bg-gray-50 font-medium" %>
        <%= form.submit "Update Attendance", class: "bg-emerald-600 text-white px-4 py-2 rounded-md hover:bg-emerald-700 font-medium" %>
      </div>
    <% end %>
  </div>
</div>
