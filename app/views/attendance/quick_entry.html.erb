<div class="space-y-6">
  <!-- Header with Date Navigation -->
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-3xl font-bold text-gray-900">Quick Attendance Entry</h1>
      <p class="text-gray-600 mt-1">Mark attendance for all team members</p>
    </div>
  </div>

  <!-- Team Selection and Date Navigation -->
  <div class="bg-gradient-to-br from-white to-emerald-50 rounded-xl shadow-lg p-6 border-l-4 border-emerald-500">
    <%= form_with(url: attendance_quick_entry_path, method: :get, class: "space-y-4") do |form| %>
      <div class="mb-4">
        <h2 class="text-lg font-semibold text-gray-900 mb-2 flex items-center gap-2">
          <svg class="w-5 h-5 text-emerald-600" fill="currentColor" viewBox="0 0 20 20">
            <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"/>
          </svg>
          Select Team & Date
        </h2>
        <p class="text-sm text-gray-600 mb-3">Choose a team to mark attendance</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 items-end">
        <div class="md:col-span-2">
          <%= form.label :team_id, "Team", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.select :team_id, options_for_select(@all_teams.map { |t| [t.name, t.id] }, @team_filter), { prompt: "Select a team..." }, class: "w-full px-4 py-2 border border-emerald-300 rounded-md focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500 bg-white", onchange: "this.form.submit()" %>
        </div>

        <div>
          <%= form.label :date, "Date", class: "block text-sm font-medium text-gray-700 mb-1" %>
          <%= form.date_field :date, value: @date, class: "w-full px-4 py-2 border border-gray-300 rounded-md focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500", onchange: "this.form.submit()" %>
        </div>
      </div>
    <% end %>

    <% if @team_filter.present? %>
      <div class="mt-4 pt-4 border-t border-emerald-100">
        <div class="flex justify-between items-center text-sm">
          <div class="text-gray-600">
            <strong class="text-emerald-700"><%= @date.strftime('%A, %B %d, %Y') %></strong>
          </div>
          <div class="flex space-x-2">
            <%= link_to attendance_quick_entry_path(date: @date - 1.day, team_id: @team_filter), class: "text-emerald-600 hover:text-emerald-700 font-medium flex items-center gap-1" do %>
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
              </svg>
              Previous Day
            <% end %>
            <%= link_to attendance_quick_entry_path(date: @date + 1.day, team_id: @team_filter), class: "text-emerald-600 hover:text-emerald-700 font-medium flex items-center gap-1" do %>
              Next Day
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Quick Entry Form -->
  <% if @team_filter.present? %>
    <div class="bg-white rounded-lg shadow">
      <% if @teams.any? && @teams.any? { |team| team.team_members.any? } %>
      <%= form_with(url: bulk_update_attendance_path, method: :post) do |form| %>
        <div class="p-6">
          <% @teams.each do |team| %>
            <% if team.team_members.any? %>
              <div class="mb-8 last:mb-0">
                <div class="flex items-center mb-4 pb-3 border-b border-gray-200">
                  <h2 class="text-lg font-semibold text-gray-900"><%= team.name %></h2>
                  <span class="ml-2 inline-flex items-center px-2 py-1 rounded text-sm font-medium bg-blue-100 text-blue-800">
                    <%= team.team_members.count %> members
                  </span>
                </div>

                <div class="space-y-3">
                  <% team.team_members.order(:name).each do |member| %>
                    <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg border border-gray-200">
                      <div class="flex-1">
                        <div class="text-sm font-medium text-gray-900"><%= member.name %></div>
                        <div class="text-xs text-gray-600"><%= member.role %></div>
                      </div>

                      <div class="flex items-center space-x-3">
                        <div class="flex space-x-2">
                          <label class="flex items-center cursor-pointer">
                            <%= form.radio_button "attendance[#{member.id}][status]", "0", class: "h-4 w-4 text-green-600 focus:ring-green-500 border-gray-300 cursor-pointer" %>
                            <span class="ml-1 text-xs font-medium text-green-700 px-2 py-1 bg-green-100 rounded">Present</span>
                          </label>

                          <label class="flex items-center cursor-pointer">
                            <%= form.radio_button "attendance[#{member.id}][status]", "2", class: "h-4 w-4 text-yellow-600 focus:ring-yellow-500 border-gray-300 cursor-pointer" %>
                            <span class="ml-1 text-xs font-medium text-yellow-700 px-2 py-1 bg-yellow-100 rounded">Late</span>
                          </label>

                          <label class="flex items-center cursor-pointer">
                            <%= form.radio_button "attendance[#{member.id}][status]", "1", class: "h-4 w-4 text-red-600 focus:ring-red-500 border-gray-300 cursor-pointer" %>
                            <span class="ml-1 text-xs font-medium text-red-700 px-2 py-1 bg-red-100 rounded">Absent</span>
                          </label>
                        </div>

                        <div class="flex-1 min-w-xs">
                          <%= form.text_field "attendance[#{member.id}][notes]", placeholder: "Notes (optional)", class: "px-3 py-1 text-xs border border-gray-300 rounded focus:ring-2 focus:ring-emerald-500 focus:border-emerald-500" %>
                        </div>
                      </div>
                    </div>

                    <!-- Hidden field for record_date -->
                    <%= form.hidden_field "attendance[#{member.id}][record_date]", value: @date.to_s %>
                  <% end %>
                </div>
              </div>
            <% end %>
          <% end %>

          <%= form.hidden_field :date, value: @date.to_s %>
        </div>

        <div class="px-6 py-4 bg-gray-50 border-t border-gray-200 flex justify-between items-center">
          <div class="text-sm text-gray-600">
            <strong><%= @teams.sum { |t| t.team_members.count } %></strong> total team members
          </div>
          <div class="flex space-x-3">
            <%= form.submit "Save Attendance", class: "bg-emerald-600 text-white px-4 py-2 rounded-md hover:bg-emerald-700 font-medium" %>
            <%= link_to "Cancel", attendance_path, class: "bg-gray-300 text-gray-700 px-4 py-2 rounded-md hover:bg-gray-400 font-medium" %>
          </div>
        </div>
        <% end %>
      <% else %>
        <div class="p-12 text-center">
          <p class="text-gray-500 text-lg mb-4">No active teams with members to mark attendance for</p>
          <%= link_to "Create a team", new_team_path, class: "text-emerald-600 hover:text-emerald-700 font-medium" %>
        </div>
      <% end %>
    </div>
  <% else %>
    <!-- No Team Selected Message -->
    <div class="bg-white rounded-xl shadow-lg p-12">
      <div class="text-center">
        <svg class="mx-auto h-16 w-16 text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"/>
        </svg>
        <h3 class="text-xl font-semibold text-gray-900 mb-2">Select a Team to Mark Attendance</h3>
        <p class="text-gray-600 mb-6">Choose a team from the dropdown above to quickly mark attendance for all team members.</p>
        <p class="text-sm text-gray-500">
          You can mark multiple team members as present, late, or absent at once.
        </p>
      </div>
    </div>
  <% end %>
</div>
