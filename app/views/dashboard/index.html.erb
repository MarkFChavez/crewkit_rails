<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold bg-gradient-to-r from-gray-900 to-emerald-700 bg-clip-text text-transparent">Dashboard</h1>
    <%= link_to attendance_quick_entry_path, class: "bg-gradient-to-r from-emerald-600 to-emerald-500 text-white px-6 py-2.5 rounded-lg hover:from-emerald-700 hover:to-emerald-600 transition-all duration-200 font-medium shadow-lg shadow-emerald-200 hover:shadow-xl hover:shadow-emerald-300 hover:scale-105 transform flex items-center gap-2" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Quick Attendance Entry
    <% end %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <div class="bg-gradient-to-br from-white to-gray-50 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 p-6 border-l-4 border-emerald-500 hover:scale-105 transform">
      <div class="flex items-center justify-between">
        <div>
          <div class="text-sm text-gray-600 font-medium">Active Teams</div>
          <div class="text-3xl font-bold text-gray-900 mt-1"><%= @active_teams.count %></div>
        </div>
        <svg class="w-12 h-12 text-emerald-500 opacity-20" fill="currentColor" viewBox="0 0 20 20">
          <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"/>
        </svg>
      </div>
    </div>

    <div class="bg-gradient-to-br from-white to-gray-50 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 p-6 border-l-4 border-blue-500 hover:scale-105 transform">
      <div class="flex items-center justify-between">
        <div>
          <div class="text-sm text-gray-600 font-medium">Total Team Members</div>
          <div class="text-3xl font-bold text-gray-900 mt-1"><%= @total_members %></div>
        </div>
        <svg class="w-12 h-12 text-blue-500 opacity-20" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
        </svg>
      </div>
    </div>

    <div class="bg-gradient-to-br from-white to-gray-50 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 p-6 border-l-4 border-emerald-500 hover:scale-105 transform">
      <div class="flex items-center justify-between">
        <div>
          <div class="text-sm text-gray-600 font-medium">Today's Attendance Rate</div>
          <div class="text-3xl font-bold text-emerald-600 mt-1"><%= @attendance_rate_today %>%</div>
        </div>
        <svg class="w-12 h-12 text-emerald-500 opacity-20" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
      </div>
    </div>

    <div class="bg-gradient-to-br from-white to-gray-50 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 p-6 border-l-4 border-purple-500 hover:scale-105 transform">
      <div class="flex items-center justify-between">
        <div>
          <div class="text-sm text-gray-600 font-medium">Hours This Week</div>
          <div class="text-3xl font-bold text-gray-900 mt-1"><%= @this_week_hours %></div>
        </div>
        <svg class="w-12 h-12 text-purple-500 opacity-20" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
        </svg>
      </div>
    </div>
  </div>

  <!-- Attendance Issues Grid: Side-by-side on large screens, stacked on mobile -->
  <% if @recent_late_arrivals.any? || @recent_absences.any? %>
    <div class="grid grid-cols-1 xl:grid-cols-2 gap-6">
      <!-- Recent Late Arrivals This Week -->
      <% if @recent_late_arrivals.any? %>
        <div class="bg-gradient-to-br from-white to-yellow-50/30 rounded-xl shadow-lg border-l-4 border-yellow-500 overflow-hidden">
          <div class="px-6 py-4 border-b border-yellow-100 bg-white">
            <div class="flex items-center gap-2 mb-2">
              <svg class="w-6 h-6 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
              </svg>
              <h2 class="text-xl font-semibold text-gray-900">Recent Late Arrivals</h2>
            </div>
            <%= link_to attendance_path, class: "text-sm text-emerald-600 hover:text-emerald-700 font-medium flex items-center gap-1 transition-colors" do %>
              View All Attendance
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            <% end %>
          </div>
          <div class="p-6">
            <div class="overflow-x-auto">
              <table class="min-w-full">
                <thead>
                  <tr class="border-b border-gray-200">
                    <th class="text-left py-3 px-4 text-xs font-semibold text-gray-600 uppercase tracking-wider">Date</th>
                    <th class="text-left py-3 px-4 text-xs font-semibold text-gray-600 uppercase tracking-wider">Employee</th>
                    <th class="text-left py-3 px-4 text-xs font-semibold text-gray-600 uppercase tracking-wider hidden lg:table-cell">Team</th>
                    <th class="text-left py-3 px-4 text-xs font-semibold text-gray-600 uppercase tracking-wider hidden xl:table-cell">Role</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                  <% @recent_late_arrivals.each do |record| %>
                    <tr class="hover:bg-yellow-50/50 transition-colors">
                      <td class="py-3 px-4 whitespace-nowrap">
                        <span class="text-sm font-medium text-gray-900"><%= record.record_date.strftime('%a, %b %d') %></span>
                      </td>
                      <td class="py-3 px-4">
                        <div class="text-sm font-semibold text-gray-900"><%= record.team_member.name %></div>
                        <div class="text-xs text-gray-500 lg:hidden"><%= record.team_member.team.name %></div>
                      </td>
                      <td class="py-3 px-4 hidden lg:table-cell">
                        <%= link_to team_path(record.team_member.team), class: "text-sm text-emerald-600 hover:text-emerald-700 font-medium transition-colors" do %>
                          <%= record.team_member.team.name %>
                        <% end %>
                      </td>
                      <td class="py-3 px-4 hidden xl:table-cell">
                        <span class="text-sm text-gray-600"><%= record.team_member.role %></span>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Recent Absences This Week -->
      <% if @recent_absences.any? %>
        <div class="bg-gradient-to-br from-white to-red-50/30 rounded-xl shadow-lg border-l-4 border-red-500 overflow-hidden">
          <div class="px-6 py-4 border-b border-red-100 bg-white">
            <div class="flex items-center gap-2 mb-2">
              <svg class="w-6 h-6 text-red-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M13.477 14.89A6 6 0 015.11 6.524l8.367 8.368zm1.414-1.414L6.524 5.11a6 6 0 018.367 8.367zM18 10a8 8 0 11-16 0 8 8 0 0116 0z" clip-rule="evenodd"/>
              </svg>
              <h2 class="text-xl font-semibold text-gray-900">Recent Absences</h2>
            </div>
            <%= link_to attendance_path, class: "text-sm text-emerald-600 hover:text-emerald-700 font-medium flex items-center gap-1 transition-colors" do %>
              View All Attendance
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
              </svg>
            <% end %>
          </div>
          <div class="p-6">
            <div class="overflow-x-auto">
              <table class="min-w-full">
                <thead>
                  <tr class="border-b border-gray-200">
                    <th class="text-left py-3 px-4 text-xs font-semibold text-gray-600 uppercase tracking-wider">Date</th>
                    <th class="text-left py-3 px-4 text-xs font-semibold text-gray-600 uppercase tracking-wider">Employee</th>
                    <th class="text-left py-3 px-4 text-xs font-semibold text-gray-600 uppercase tracking-wider hidden lg:table-cell">Team</th>
                    <th class="text-left py-3 px-4 text-xs font-semibold text-gray-600 uppercase tracking-wider hidden xl:table-cell">Role</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-100">
                  <% @recent_absences.each do |record| %>
                    <tr class="hover:bg-red-50/50 transition-colors">
                      <td class="py-3 px-4 whitespace-nowrap">
                        <span class="text-sm font-medium text-gray-900"><%= record.record_date.strftime('%a, %b %d') %></span>
                      </td>
                      <td class="py-3 px-4">
                        <div class="text-sm font-semibold text-gray-900"><%= record.team_member.name %></div>
                        <div class="text-xs text-gray-500 lg:hidden"><%= record.team_member.team.name %></div>
                      </td>
                      <td class="py-3 px-4 hidden lg:table-cell">
                        <%= link_to team_path(record.team_member.team), class: "text-sm text-emerald-600 hover:text-emerald-700 font-medium transition-colors" do %>
                          <%= record.team_member.team.name %>
                        <% end %>
                      </td>
                      <td class="py-3 px-4 hidden xl:table-cell">
                        <span class="text-sm text-gray-600"><%= record.team_member.role %></span>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>

  <div class="bg-gradient-to-br from-white to-gray-50 rounded-xl shadow-lg border-l-4 border-blue-500 overflow-hidden">
    <div class="px-6 py-4 border-b border-blue-100 bg-white flex justify-between items-center">
      <div class="flex items-center gap-2">
        <svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
          <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"/>
        </svg>
        <h2 class="text-xl font-semibold text-gray-900">Active Teams</h2>
      </div>
      <%= link_to teams_path, class: "text-sm text-emerald-600 hover:text-emerald-700 font-medium flex items-center gap-1 transition-colors" do %>
        Manage Teams
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
        </svg>
      <% end %>
    </div>
    <div class="p-6">
      <% if @active_teams.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% @active_teams.each do |team| %>
            <div class="bg-white border border-gray-200 rounded-lg p-5 hover:shadow-xl hover:scale-105 transition-all duration-300 hover:border-emerald-300">
              <div class="flex justify-between items-start">
                <div class="flex-1">
                  <h3 class="font-semibold text-gray-900 text-lg flex items-center gap-2">
                    <%= link_to team_path(team), class: "hover:text-emerald-600 transition-colors" do %>
                      <%= team.name %>
                    <% end %>
                    <svg class="w-4 h-4 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                    </svg>
                  </h3>
                  <p class="text-sm text-gray-600 mt-1 flex items-center gap-1">
                    <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-2a1 1 0 00-1-1H9a1 1 0 00-1 1v2a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z" clip-rule="evenodd"/>
                    </svg>
                    <%= team.company %>
                  </p>
                  <div class="flex items-center gap-2 mt-3">
                    <span class="px-3 py-1 text-xs font-semibold rounded-full bg-emerald-100 text-emerald-800 flex items-center gap-1">
                      <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
                      </svg>
                      <%= team.team_members.count %> members
                    </span>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <p class="text-gray-500 text-center py-8">No active teams. <%= link_to "Create a team", new_team_path, class: "text-emerald-600 hover:text-emerald-700 font-medium transition-colors" %></p>
      <% end %>
    </div>
  </div>
</div>
