<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold bg-gradient-to-r from-gray-900 to-emerald-700 bg-clip-text text-transparent">Dashboard</h1>
    <%= link_to attendance_quick_entry_path, class: "cursor-pointer bg-gradient-to-r from-emerald-600 to-emerald-500 text-white px-6 py-2.5 rounded-lg hover:from-emerald-700 hover:to-emerald-600 transition-all duration-200 font-medium shadow-lg shadow-emerald-200 hover:shadow-xl hover:shadow-emerald-300 hover:scale-105 transform flex items-center gap-2" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Quick Attendance Entry
    <% end %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-4 gap-6">
    <div class="bg-gradient-to-br from-white to-gray-50 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 p-6 border-l-4 border-emerald-500 hover:scale-105 transform">
      <div class="flex items-center justify-between">
        <div>
          <div class="text-sm text-gray-600 font-medium">Active Teams</div>
          <div class="text-3xl font-bold text-gray-900 mt-1"><%= @active_teams.count %></div>
        </div>
        <svg class="w-12 h-12 text-emerald-500 opacity-20" fill="currentColor" viewBox="0 0 20 20">
          <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z"/>
        </svg>
      </div>
    </div>

    <div class="bg-gradient-to-br from-white to-gray-50 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 p-6 border-l-4 border-blue-500 hover:scale-105 transform">
      <div class="flex items-center justify-between">
        <div>
          <div class="text-sm text-gray-600 font-medium">Total Team Members</div>
          <div class="text-3xl font-bold text-gray-900 mt-1"><%= @total_members %></div>
        </div>
        <svg class="w-12 h-12 text-blue-500 opacity-20" fill="currentColor" viewBox="0 0 20 20">
          <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
        </svg>
      </div>
    </div>

    <div class="bg-gradient-to-br from-white to-gray-50 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 p-6 border-l-4 border-emerald-500 hover:scale-105 transform">
      <div class="flex items-center justify-between">
        <div>
          <div class="text-sm text-gray-600 font-medium">Today's Attendance Rate</div>
          <div class="text-3xl font-bold text-emerald-600 mt-1"><%= @attendance_rate_today %>%</div>
        </div>
        <svg class="w-12 h-12 text-emerald-500 opacity-20" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
      </div>
    </div>

    <div class="bg-gradient-to-br from-white to-gray-50 rounded-xl shadow-lg hover:shadow-xl transition-all duration-300 p-6 border-l-4 border-purple-500 hover:scale-105 transform">
      <div class="flex items-center justify-between">
        <div>
          <div class="text-sm text-gray-600 font-medium">Hours This Week</div>
          <div class="text-3xl font-bold text-gray-900 mt-1"><%= @this_week_hours %></div>
        </div>
        <svg class="w-12 h-12 text-purple-500 opacity-20" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
        </svg>
      </div>
    </div>
  </div>

  <div class="bg-gradient-to-br from-white to-gray-50 rounded-xl shadow-lg border-l-4 border-indigo-500 overflow-hidden">
    <div class="px-6 py-4 border-b border-indigo-100 bg-white">
      <div class="flex items-center gap-2">
        <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"/>
        </svg>
        <h2 class="text-xl font-semibold text-gray-900">Weekly Attendance Trend</h2>
      </div>
    </div>
    <div class="p-6">
      <canvas
        data-controller="chart"
        data-chart-labels-value="<%= @weekly_attendance_data[:labels].to_json.gsub('"', '&quot;').html_safe %>"
        data-chart-present-value="<%= @weekly_attendance_data[:present].to_json.gsub('"', '&quot;').html_safe %>"
        data-chart-absent-value="<%= @weekly_attendance_data[:absent].to_json.gsub('"', '&quot;').html_safe %>"
        data-chart-late-value="<%= @weekly_attendance_data[:late].to_json.gsub('"', '&quot;').html_safe %>"
      ></canvas>
    </div>
  </div>
</div>
