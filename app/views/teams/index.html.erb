<div class="space-y-6">
  <div class="flex justify-between items-center">
    <h1 class="text-3xl font-bold bg-gradient-to-r from-gray-900 to-emerald-700 bg-clip-text text-transparent">Teams</h1>
    <%= link_to new_team_path, class: "bg-gradient-to-r from-emerald-600 to-emerald-500 text-white px-6 py-2.5 rounded-lg hover:from-emerald-700 hover:to-emerald-600 transition-all duration-200 font-medium shadow-lg shadow-emerald-200 hover:shadow-xl hover:shadow-emerald-300 hover:scale-105 transform flex items-center gap-2" do %>
      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"/>
      </svg>
      Create Team
    <% end %>
  </div>

  <!-- Tabs for Active and Archived -->
  <div class="border-b border-emerald-100 bg-white/50 backdrop-blur-sm rounded-t-lg">
    <nav class="flex space-x-2 px-4" aria-label="Tabs">
      <a href="#active" class="active-tab border-b-2 border-emerald-600 py-4 px-4 text-sm font-medium text-emerald-600 cursor-pointer hover:bg-emerald-50 rounded-t-lg transition-all" onclick="showTab(event, 'active')">
        <div class="flex items-center gap-2">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
          </svg>
          Active Teams
        </div>
      </a>
      <a href="#archived" class="archived-tab border-b-2 border-transparent py-4 px-4 text-sm font-medium text-gray-600 hover:text-gray-900 hover:bg-gray-50 hover:border-gray-300 cursor-pointer rounded-t-lg transition-all" onclick="showTab(event, 'archived')">
        <div class="flex items-center gap-2">
          <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
            <path d="M4 3a2 2 0 100 4h12a2 2 0 100-4H4z"/><path fill-rule="evenodd" d="M3 8h14v7a2 2 0 01-2 2H5a2 2 0 01-2-2V8zm5 3a1 1 0 011-1h2a1 1 0 110 2H9a1 1 0 01-1-1z" clip-rule="evenodd"/>
          </svg>
          Archived Teams
        </div>
      </a>
    </nav>
  </div>

  <!-- Active Teams Tab -->
  <div id="active" class="tab-content">
    <div class="bg-gradient-to-br from-white to-gray-50 rounded-xl shadow-lg border-l-4 border-emerald-500 overflow-hidden">
      <div class="p-6">
        <% if @active_teams.any? %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% @active_teams.each do |team| %>
              <div class="bg-white border border-gray-200 rounded-xl p-6 hover:shadow-xl hover:scale-105 hover:border-emerald-300 transition-all duration-300">
                <div class="flex justify-between items-start mb-4">
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold text-gray-900 flex items-center gap-2">
                      <%= link_to team.name, team_path(team), class: "hover:text-emerald-600 transition-colors" %>
                      <svg class="w-4 h-4 text-emerald-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                      </svg>
                    </h3>
                    <p class="text-sm text-gray-600 flex items-center gap-1 mt-1">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-2a1 1 0 00-1-1H9a1 1 0 00-1 1v2a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z" clip-rule="evenodd"/>
                      </svg>
                      <%= team.company %>
                    </p>
                  </div>
                </div>

                <% if team.description.present? %>
                  <p class="text-sm text-gray-600 mb-4 line-clamp-3"><%= truncate(team.description, length: 100) %></p>
                <% end %>

                <div class="flex items-center justify-between mb-4 gap-2">
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-emerald-100 text-emerald-800 gap-1">
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
                    </svg>
                    <%= team.member_count %> members
                  </span>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-green-100 text-green-800 gap-1">
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
                    </svg>
                    Active
                  </span>
                </div>

                <div class="flex space-x-2">
                  <%= link_to team_path(team), class: "flex-1 bg-emerald-100 text-emerald-700 px-3 py-2 rounded-lg text-center text-sm font-medium hover:bg-emerald-200 transition-colors flex items-center justify-center gap-1" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                    View
                  <% end %>
                  <%= link_to edit_team_path(team), class: "flex-1 bg-gray-100 text-gray-700 px-3 py-2 rounded-lg text-center text-sm font-medium hover:bg-gray-200 transition-colors flex items-center justify-center gap-1" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
                    </svg>
                    Edit
                  <% end %>
                  <%= button_to archive_team_path(team), method: :patch, form: { data: { turbo_confirm: "Archive this team?" }, class: "flex-1" }, class: "bg-yellow-100 text-yellow-700 px-3 py-2 rounded-lg text-center text-sm font-medium hover:bg-yellow-200 transition-colors flex items-center justify-center gap-1" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"/>
                    </svg>
                    Archive
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12">
            <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
            <p class="text-gray-500 text-lg mb-4">No active teams yet</p>
            <%= link_to "Create your first team", new_team_path, class: "text-emerald-600 hover:text-emerald-700 font-medium transition-colors" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Archived Teams Tab -->
  <div id="archived" class="tab-content hidden">
    <div class="bg-gradient-to-br from-white to-gray-50 rounded-xl shadow-lg border-l-4 border-gray-400 overflow-hidden">
      <div class="p-6">
        <% if @archived_teams.any? %>
          <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
            <% @archived_teams.each do |team| %>
              <div class="bg-gray-50 border border-gray-300 rounded-xl p-6 hover:shadow-xl hover:scale-105 transition-all duration-300 opacity-90">
                <div class="flex justify-between items-start mb-4">
                  <div class="flex-1">
                    <h3 class="text-lg font-semibold text-gray-700 flex items-center gap-2">
                      <%= link_to team.name, team_path(team), class: "hover:text-gray-900 transition-colors" %>
                      <svg class="w-4 h-4 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"/>
                      </svg>
                    </h3>
                    <p class="text-sm text-gray-600 flex items-center gap-1 mt-1">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M4 4a2 2 0 012-2h8a2 2 0 012 2v12a1 1 0 110 2h-3a1 1 0 01-1-1v-2a1 1 0 00-1-1H9a1 1 0 00-1 1v2a1 1 0 01-1 1H4a1 1 0 110-2V4zm3 1h2v2H7V5zm2 4H7v2h2V9zm2-4h2v2h-2V5zm2 4h-2v2h2V9z" clip-rule="evenodd"/>
                      </svg>
                      <%= team.company %>
                    </p>
                  </div>
                </div>

                <% if team.description.present? %>
                  <p class="text-sm text-gray-600 mb-4 line-clamp-3"><%= truncate(team.description, length: 100) %></p>
                <% end %>

                <div class="flex items-center justify-between mb-4 gap-2">
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-gray-300 text-gray-700 gap-1">
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M9 6a3 3 0 11-6 0 3 3 0 016 0zM17 6a3 3 0 11-6 0 3 3 0 016 0zM12.93 17c.046-.327.07-.66.07-1a6.97 6.97 0 00-1.5-4.33A5 5 0 0119 16v1h-6.07zM6 11a5 5 0 015 5v1H1v-1a5 5 0 015-5z"/>
                    </svg>
                    <%= team.member_count %> members
                  </span>
                  <span class="inline-flex items-center px-3 py-1 rounded-full text-xs font-semibold bg-gray-400 text-white gap-1">
                    <svg class="w-3 h-3" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M4 3a2 2 0 100 4h12a2 2 0 100-4H4z"/><path fill-rule="evenodd" d="M3 8h14v7a2 2 0 01-2 2H5a2 2 0 01-2-2V8zm5 3a1 1 0 011-1h2a1 1 0 110 2H9a1 1 0 01-1-1z" clip-rule="evenodd"/>
                    </svg>
                    Archived
                  </span>
                </div>

                <div class="flex space-x-2">
                  <%= link_to team_path(team), class: "flex-1 bg-gray-200 text-gray-700 px-3 py-2 rounded-lg text-center text-sm font-medium hover:bg-gray-300 transition-colors flex items-center justify-center gap-1" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"/><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"/>
                    </svg>
                    View
                  <% end %>
                  <%= button_to activate_team_path(team), method: :patch, form: { data: { turbo_confirm: "Activate this team?" }, class: "flex-1" }, class: "bg-green-100 text-green-700 px-3 py-2 rounded-lg text-center text-sm font-medium hover:bg-green-200 transition-colors flex items-center justify-center gap-1" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                    Activate
                  <% end %>
                  <%= button_to team_path(team), method: :delete, form: { data: { turbo_confirm: "Permanently delete this team?" }, class: "flex-1" }, class: "bg-red-100 text-red-700 px-3 py-2 rounded-lg text-center text-sm font-medium hover:bg-red-200 transition-colors flex items-center justify-center gap-1" do %>
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
                    </svg>
                    Delete
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-12">
            <svg class="w-16 h-16 mx-auto text-gray-400 mb-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
            </svg>
            <p class="text-gray-500 text-lg">No archived teams</p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<script>
  function showTab(e, tabName) {
    e.preventDefault();

    // Hide all tabs
    document.querySelectorAll('.tab-content').forEach(tab => {
      tab.classList.add('hidden');
    });

    // Show selected tab
    document.getElementById(tabName).classList.remove('hidden');

    // Update tab styling
    document.querySelectorAll('a[href^="#"]').forEach(tab => {
      tab.classList.remove('border-emerald-600', 'text-emerald-600', 'hover:bg-emerald-50');
      tab.classList.add('border-transparent', 'text-gray-600', 'hover:text-gray-900', 'hover:bg-gray-50', 'hover:border-gray-300');
    });

    const clickedElement = e.target.closest('a');
    clickedElement.classList.remove('border-transparent', 'text-gray-600', 'hover:text-gray-900', 'hover:bg-gray-50', 'hover:border-gray-300');
    clickedElement.classList.add('border-emerald-600', 'text-emerald-600', 'hover:bg-emerald-50');
  }
</script>
